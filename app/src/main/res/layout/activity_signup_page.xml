<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".SignupPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personalinfobtn"
                android:layout_width="414dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="13dp"
                android:text="CREATE  ACCOUNT"
                android:textAllCaps="true"
                android:textColor="@color/goodgrey"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".personalInfo"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="385dp"
                android:layout_height="762dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileimage"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/defaultprofileimage" />



                <LinearLayout
                    android:id="@+id/personalinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circularbordersolid"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="About  Me"
                                    android:textColor="@color/goodgrey"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/circular_grey_bordersolid"
                                    android:padding="10dp"
                                    android:layout_marginTop="-10dp"
                                    android:src="@drawable/baseline_edit_24" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/NameLayout"
                                    android:layout_width="278dp"
                                    android:layout_height="78dp"
                                    android:textColor="#3A3131">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/name"
                                        android:layout_width="250dp"
                                        android:layout_height="50dp"
                                        android:hint="Name"
                                        android:textColor="@color/goodgrey"
                                        android:textSize="15sp"
                                        tools:ignore="TouchTargetSizeCheck" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginTop="-2dp"
                                    android:paddingRight="8dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@drawable/circular_grey_bordersolid"
                                        android:padding="10dp"
                                        android:layout_marginTop="-10dp"
                                        android:src="@drawable/baseline_calendar_month_24" />

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/DateLayout"
                                        android:layout_width="278dp"
                                        android:layout_height="80dp"
                                        android:textColor="#3A3131">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/date"
                                            android:layout_width="250dp"
                                            android:layout_height="50dp"
                                            android:hint="Select Date Of Birth"
                                            android:focusable="false"
                                            android:textColor="@color/goodgrey"
                                            android:textSize="15sp"
                                            tools:ignore="DuplicateIds,TouchTargetSizeCheck" />
                                    </com.google.android.material.textfield.TextInputLayout>


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingRight="8dp">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:padding="10dp"
                                        android:src="@drawable/g1" />

                                    <RadioGroup
                                        android:id="@+id/gender"
                                        android:layout_width="256dp"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="20dp"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/male"
                                            android:layout_width="113dp"
                                            android:layout_height="wrap_content"
                                            android:text="Male"
                                            android:textColor="@color/goodgrey"
                                            tools:ignore="TouchTargetSizeCheck" />

                                        <RadioButton
                                            android:id="@+id/female"
                                            android:layout_width="113dp"
                                            android:layout_height="wrap_content"
                                            android:text="Female"
                                            android:textColor="@color/goodgrey"
                                            tools:ignore="TouchTargetSizeCheck" />

                                    </RadioGroup>

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="304dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/circularbordersolid"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contact"
                                    android:textColor="@color/goodgrey"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="-8dp"
                                    android:background="@drawable/circular_grey_bordersolid"
                                    android:padding="10dp"
                                    android:src="@drawable/baseline_phone_24" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/PhoneLayout"
                                    android:layout_width="278dp"
                                    android:layout_height="80dp"
                                    android:textColor="#3A3131"
                                    app:helperTextTextColor="#EA2222"
                                    tools:ignore="DuplicateIds">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/phone"
                                        android:layout_width="250dp"
                                        android:layout_height="50dp"
                                        android:hint="Phone No"
                                        android:inputType="number"
                                        android:maxLength="14"
                                        android:textColor="@color/goodgrey"
                                        android:textSize="15sp"
                                        tools:ignore="DuplicateIds,TouchTargetSizeCheck" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:gravity="center_vertical"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="-8dp"
                                    android:background="@drawable/circular_grey_bordersolid"
                                    android:padding="10dp"
                                    android:src="@drawable/baseline_email_24" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/EmailLayout"
                                    android:layout_width="278dp"
                                    android:layout_height="80dp"
                                    android:textColor="#3A3131"
                                    app:helperTextTextColor="#EA2222">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/email"
                                        android:layout_width="250dp"
                                        android:layout_height="50dp"
                                        android:hint="Email ID"
                                        android:inputType="textEmailAddress"
                                        android:textColor="@color/goodgrey"
                                        android:textSize="15sp"
                                        tools:ignore="TouchTargetSizeCheck" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:gravity="center_vertical"
                                android:paddingRight="8dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="-8dp"
                                    android:background="@drawable/circular_grey_bordersolid"
                                    android:padding="10dp"
                                    android:src="@drawable/baseline_password_24" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/PasswordLayout"
                                    android:layout_width="250dp"
                                    android:layout_height="80dp"
                                    android:textColor="#3A3131"
                                    app:counterEnabled="true"
                                    app:counterMaxLength="16"
                                    app:endIconMode="password_toggle"
                                    app:helperTextTextColor="#EA2222">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/password"
                                        android:layout_width="250dp"
                                        android:layout_height="50dp"
                                        android:hint="Password"
                                        android:inputType="textEmailAddress"
                                        android:maxLength="16"
                                        android:textColor="@color/goodgrey"
                                        android:textSize="15sp"
                                        app:passwordToggleEnabled="true"
                                        tools:ignore="TouchTargetSizeCheck" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#fff"
                    android:gravity="center">

                    <TextView
                        android:layout_width="174dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Already have an Account ?"
                        android:textColor="@color/goodgrey"
                        android:textSize="14dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/loginBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/goodgrey"
                        android:text=" LOGIN "
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/signupBtn"
                    android:layout_width="114dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_shape_control"
                    android:gravity="center_vertical"
                    android:text="Sign Up"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    tools:ignore="RtlCompat" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="10px"
        android:visibility="gone"
        tools:ignore="DuplicateIds" />

</RelativeLayout>
