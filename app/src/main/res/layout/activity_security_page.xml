<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".SecurityPage">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/toolbar"
        android:background="#586ECB"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your Privacy and Security Settings to keep your Account Safe."
                android:textSize="17sp"
                android:layout_gravity="center"
                android:textColor="#000"
                android:paddingBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ Two-Factor Authentication :-"
                android:textSize="18sp"
                android:textColor="@color/blue"
                android:paddingBottom="8dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="Enable Two-Factor Authentication "
                android:textColor="#000"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ Change Password :-"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/forgotBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="@color/goodgrey"
                android:paddingBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ App Permissions :-"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/button_manage_permissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Permissions"
                android:textColor="@color/goodgrey"
                android:paddingBottom="24dp"
                android:onClick="onManagePermissionsClick" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ Privacy Settings :-"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp"
                android:text="Enable Private Mode "
                android:textColor="#000"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ Data Usage :-"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/datausage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Data Usages"
                android:textColor="@color/goodgrey"
                android:paddingBottom="24dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
